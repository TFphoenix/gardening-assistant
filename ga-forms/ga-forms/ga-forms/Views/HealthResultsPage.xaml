             Title="{Binding Title}"
             mc:Ignorable="d" 
             x:Class="ga_forms.Views.HealthResultsPage"
             Visual="Material"
             Shell.NavBarIsVisible="false"
             Shell.TabBarIsVisible="false">

    <ContentPage.BindingContext>
        <vm:HealthResultsViewModel />
    </ContentPage.BindingContext>
    
